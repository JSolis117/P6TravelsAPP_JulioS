<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P6TravelsAPP_JulioS.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="80,10,80,10">

        <Entry x:Name="TxtUserName" Placeholder="Username" Keyboard="Email" FontSize="25"/>
        <Entry x:Name="TxtPassword" Placeholder="Password" Keyboard="Text" FontSize="25" IsPassword="True"/>
        <Button x:Name="BtnLogin" Text="Login" BackgroundColor="Green"/>


    </VerticalStackLayout>
</ContentPage>